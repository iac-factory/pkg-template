{
    "name": "@iac-factory/pkg-template",
    "version": "0.0.0",
    "private": true,
    "author": "Jacob B. Sanders",
    "devDependencies": {
        "@swc-node/core": "^1.9.0",
        "@swc-node/jest": "^1.5.0",
        "@swc-node/register": "^1.5.0",
        "@swc-node/sourcemap-support": "^0.2.0",
        "@typescript-eslint/eslint-plugin": "latest",
        "@typescript-eslint/parser": "latest",
        "@typescript-eslint/utils": "latest",
        "esm": "^3.2.25",
        "eslint": "latest",
        "lerna": "^4.0.0",
        "ts-node": "^10.7.0",
        "tslib": "^2.4.0",
        "typescript": "^4.6.3"
    },
    "repository": {
        "type": "git",
        "directory": "/",
        "url": "git+https://github.com/iac-factory/cli-utilities.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "scripts": {
        "install": "lerna bootstrap --npm-client npm",
        "postinstall": "lerna link",
        "release": "lerna version",
        "postversion": "lerna publish from-git --registry https://npm.pkg.github.com/ --canary",
        "ci": "npm run release"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "rules": {
            "no-case-declarations": 0,
            "@typescript-eslint/no-var-requires": 0,
            "@typescript-eslint/no-explicit-any": 0,
            "@typescript-eslint/explicit-function-return-type": 0,
            "@typescript-eslint/no-use-before-define": 0,
            "@typescript-eslint/no-empty-interface": 0,
            "@typescript-esline/no-async-promise-executor": 0,
            "@typescript-eslint/explicit-module-boundary-types": 0,
            "@typescript-eslint/no-empty-function": 0,
            "@typescript-eslint/no-unused-vars": 0,
            "@typescript-eslint/no-inferrable-types": 0,
            "@typescript-eslint/ban-types": 0,
            "@typescript-eslint/ban-ts-comment": 0,
            "no-sequences": "error"
        },
        "ignorePatterns": [
            "ci",
            "dist",
            "coverage",
            "distribution",
            "node_modules"
        ]
    }
}
